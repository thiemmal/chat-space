.main-chat
  .main-chat__group-info
    .main-chat__group-info__third-items
      .main-chat__group-info__third-items__left
        %p.main-chat__group-info__third-items__left__group-name test
        %p.main-chat__group-info__third-items__left__member Member : thiem
      .main-chat__group-info__third-items__right
        = link_to 'Edit',"#", class: "main-chat__group-info__third-items__right__edit-btn" 
  .main-chat__message-list
    = render partial: 'message', collection: @messages
  .main-chat__message-form
    =form_with model: [@group, @message] do |f|
      .main-chat__message-form__fifth-items
        .main-chat__message-form__fifth-items__content
          = f.text_field :body, class: "main-chat__message-form__fifth-items__content__text", placeholder: "type a message"
          = f.label :image, class: "main-chat__message-form__fifth-items__content__image" do
            = icon('far', 'image')
            = f.file_field :image, class: "main-chat__message-form__fifth-items__content__image__file"
        = f.submit 'Send', class: "main-chat__message-form__fifth-items__send-btn" 